<section class="container content-section">
  <h2 class="section-header" id="cart-section">Shopping Cart</h2>

  <div class="cart-grid">
    <span class="cart-item cart-header">SONG</span>
    <span class="cart-quantity cart-header">ARTIST</span>
    <span class="cart-price cart-header">PRICE</span>
    {{#each tracks}}
    <span class="cart-column">{{ title }}</span>
    <span class="cart-column">{{ user }}</span>
    <span class="cart-column">${{ price }}</span>
    {{/each}}
    <span></span>
  </div>

  <strong class="cart-header">TOTAL</strong>
  <span class="cart-total-price">${{ total }}</span>
  <div class="btn-container">
    <a href="contact">
      <button class="btn-purchase" type="button">Checkout</button>
    </a>
  </div>
</section>
